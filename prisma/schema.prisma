// Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  WORKER
  ADMIN
}

enum TaskStatus {
  OPEN
  ASSIGNED
  COMPLETED
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(CLIENT)
  createdAt DateTime @default(now())

  tasks     Task[]   @relation("UserTasks")
  work      Task[]   @relation("WorkerTasks")
  givenReviews    Review[] @relation("GivenReviews")
  receivedReviews Review[] @relation("ReceivedReviews")

}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Int?
  status      TaskStatus   @default(OPEN)
  createdAt   DateTime @default(now())

  clientId    String
  client      User     @relation("UserTasks", fields: [clientId], references: [id])

  workerId    String?
  worker      User?      @relation("WorkerTasks", fields: [workerId], references: [id])

  
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  taskId    String   @unique
  task      Task     @relation(fields: [taskId], references: [id])

  reviewerId String
  reviewer   User     @relation("GivenReviews", fields: [reviewerId], references: [id])

  workerId  String
  worker    User     @relation("ReceivedReviews", fields: [workerId], references: [id])
}

